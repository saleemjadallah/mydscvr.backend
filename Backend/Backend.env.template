# Backend Environment Configuration Template
# Copy this file to Backend.env and fill in your actual values

# Database Configuration
MONGODB_URL=mongodb+srv://username:password@cluster.mongodb.net/?retryWrites=true&w=majority&appName=AppName
MONGODB_DATABASE=YourDatabaseName

# JWT Configuration
JWT_SECRET=your-super-secure-jwt-secret-key-here
ACCESS_TOKEN_EXPIRE_MINUTES=10080
REFRESH_TOKEN_EXPIRE_DAYS=30

# Google OAuth Configuration
GOOGLE_CLIENT_ID=your-google-client-id
GOOGLE_CLIENT_SECRET=your-google-client-secret

# API Keys
PERPLEXITY_API_KEY=your-perplexity-api-key
ZEPTOMAIL_API_KEY=your-zeptomail-api-key
OPENAI_API_KEY=your-openai-api-key
WEBHOOK_API_KEY=your-webhook-api-key

# AWS S3 Configuration
AWS_ACCESS_KEY_ID=your-aws-access-key-id
AWS_SECRET_ACCESS_KEY=your-aws-secret-access-key
S3_BUCKET_NAME=your-s3-bucket-name
S3_REGION=your-s3-region

# Algolia Search Configuration
ALGOLIA_APP_ID=your-algolia-app-id
ALGOLIA_API_KEY=your-algolia-api-key
ALGOLIA_SEARCH_API_KEY=your-algolia-search-api-key
ALGOLIA_INDEX_NAME=your-algolia-index-name

# OpenAI Configuration
OPENAI_MODEL=gpt-4o-mini
OPENAI_MAX_TOKENS=1000
OPENAI_TEMPERATURE=0.3

# Debug Configuration
DEBUG=False